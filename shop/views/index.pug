html
  head
    title= title
  body
    h1= message
  a(href='/orders')
    h2= 'Orders'
  a(href='/catalog')
    h2= 'Catalog'
  if username
    h2= username
    a(href='/user/')
      h2= 'Account'
    form(action='/user/logout', method='POST')
      input(type='submit', value='Logout')
  else
    a(href='/user/register')
      h2= 'register'
    a(href='/user/login')
      h2= 'login'